<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linear_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/user_name_background_blue"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:gravity="center"
        android:text="@string/quiz_app"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="@color/user_name_input"
        android:layout_margin="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:gravity="center"
        android:text="@string/enter_name"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/dark_grey_text"
        android:layout_margin="10dp"
        />

    <EditText
        android:id="@+id/enter_name_edittext"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="@string/insert_name_here"
        android:textSize="25sp"
        android:textColor="@color/dark_grey_text"
        android:maxLines="1"
        android:padding="10dp"
        android:layout_margin="25dp"
        android:textColorHighlight="@color/user_name_input"
        android:inputType="text"
        tools:ignore="Autofill"/>

    <Button
        android:id="@+id/enter_quiz_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="15dp"
        android:background="@drawable/circular_button"
        android:text="@string/enter_quiz"
        android:textSize="18sp"
        android:textColor="@color/white"
        />

</LinearLayout>